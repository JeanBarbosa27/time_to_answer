<div class="login_wrapper">
  <section class="login_content">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <h1><%= t 'asks.forgot_password' %></h1>

      <div>
        <%= f.email_field :email, autofocus: true, placeholder: t('activerecord.attributes.user.email'),
                          class: 'form-control' %>
      </div>

      <%= f.submit t('texts.send_reset_password_instructions'), class: 'btn btn-default submit' %>

    <% end %>
  </section>
</div>
