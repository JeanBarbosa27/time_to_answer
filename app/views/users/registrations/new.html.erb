<div class="login_wrapper">
  <section class="login_content">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <h1><%= t 'actions.sign_up_account' %></h1>

      <div>
        <%= f.email_field :email, autofocus: true, placeholder: t('activerecord.attributes.user.email'),
                          class: 'form-control' %>
      </div>

      <div>
        <% password_placeholder = t 'activerecord.attributes.user.password' %>
        <% password_placeholder += " (#{t('texts.minimum_characters',
                                          minimum: @minimum_password_length)})".downcase if @minimum_password_length %>
        
        <%= f.password_field :password, placeholder: password_placeholder, class: 'form-control' %>
      </div>

      <div>
        <%= f.password_field  :password_confirmation,
                              placeholder: t('activerecord.attributes.user.password_confirmation'),
                              class: 'form-control' %>
      </div>

      <%= f.submit t('actions.sign_up'), class: 'btn btn-default submit' %>
    <% end %>
  </section>
</div>
