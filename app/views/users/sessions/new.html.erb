<div class="login_wrapper">
  <section class="login_content">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h1><%= t 'actions.sign_in_account' %></h1>

      <div>
        <%= f.email_field :email, autofocus: true, placeholder: t('activerecord.attributes.user.email'),
                          class: 'form-control' %>
      </div>

      <div>
        <%= f.password_field :password, placeholder: t('activerecord.attributes.user.password'),
                              class: 'form-control'%>
      </div>

      <%= f.submit t('actions.sign_in'), class: 'btn btn-default submit' %>

      <div class="clearfix"></div>

      <div class="separator">
        <p class="change_link">
          <%= render "users/shared/links" %>
        </p>
      </div>
    <% end %>
  </section>
</div>
