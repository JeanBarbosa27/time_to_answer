<h2><%= @admins.model_name.human count: @admins.count %></h2>
<p><%= t 'panels.administrative_backoffice.subtitle.managers' %></p>
<table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
  <thead>
    <tr role="row">
      <th class="sorting sorting_asc text-center" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-sort="ascending"
          aria-label="Name: activate to sort column descending"
      >
        <%= t 'activerecord.attributes.admin.email' %>
      </th>
      <th class="sorting sorting_asc text-center" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-sort="ascending"
          aria-label="Name: activate to sort column descending"
      >
        <%= t 'verbs.actions' %>
        <%= link_to new_admins_backoffice_admin_path, class: 'btn btn-success btn-circle btn-sm ml-2' do %>
          <i class="fas fa-plus"></i>
        <% end %>
      </th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <th class="text-center" rowspan="1" colspan="1"><%= t 'activerecord.attributes.admin.email' %></th>
      <th class="text-center" rowspan="1" colspan="1">
        <%= t 'verbs.actions' %>
        <%= link_to new_admins_backoffice_admin_path, class: 'btn btn-success btn-circle btn-sm ml-2' do %>
          <i class="fas fa-plus"></i>
        <% end %>
      </th>
    </tr>
  </tfoot>
  <tbody>
    <% @admins.each do |admin| %>
      <tr class="<%= cycle('odd', 'even') %>">
        <td><%= admin.email %></td>
        <td class="w-100 d-flex justify-content-center">
          <%= link_to edit_admins_backoffice_admin_path(admin), class: 'btn btn-primary btn-circle btn-sm' do %>
            <i class="fas fa-edit"></i>
          <% end %>
          <%= link_to admins_backoffice_admin_path(admin), method: :delete,
              class: 'btn btn-danger btn-circle btn-sm ml-2', 
              data: { confirm: t('texts.confirmations.delete', item: admin.email) } do %>
            <i class="fas fa-trash"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= render partial: 'shared/components/paginator', locals: { model: @admins } %>