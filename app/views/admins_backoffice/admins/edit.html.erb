<div class="row">
  <div class="col-lg-8">
    <h2 class="h4 text-gray-900 mb-4"><%= t 'texts.editing' %></h2>
    <%= form_with(model: [ :admins_backoffice, @admin ], local: true) do |form| %>
      <div class="form-group">
        <%= form.text_field :email, 
            class: 'form-control',
            require: false,
            placeholder: Admin.human_attribute_name('email') %>
      </div>
      <div class="form-group row">
        <div class="col-sm-12 col-lg-6 mb-sm-3">
          <%= form.text_field :password, 
              class: 'form-control',
              require: false,
              autofocus: true,
              type: 'password',
              placeholder: Admin.human_attribute_name('password') %>
        </div>

        <div class="col-sm-12 col-lg-6">
          <%= form.text_field :password_confirmation, 
              class: 'form-control',
              require: false,
              type: 'password',
              placeholder: Admin.human_attribute_name('password_confirmation') %>
        </div>
      </div>
      <%= form.submit t('actions.save'), class: 'btn btn-primary col-sm-12 col-lg-3' %>
      <%= link_to t('links.back'), 
          admins_backoffice_admins_path,
          class: 'btn btn-secondary col-sm-12 col-lg-3 mt-sm-2 mt-lg-0 ml-lg-2' %>
      <div class="row">
        <div class="col-sm-12 col-lg-3">
        </div>
      </div>
    <% end %>
  </div>
</div>
