<h2><%= @question_model_name %></h2>
<p><%= t 'panels.administrative_backoffice.subtitle.questions' %></p>
<table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
  <thead>
    <tr role="row">
      <th class="sorting sorting_asc text-center" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-sort="ascending"
          aria-label="Name: activate to sort column descending"
      >
        <%= @question_attribute_subject %>
      </th>
      <th class="sorting sorting_asc text-center" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-sort="ascending"
          aria-label="Name: activate to sort column descending"
      >
        <%= @question_attribute_description %>
      </th>
      <th class="sorting sorting_asc text-center" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-sort="ascending"
          aria-label="Name: activate to sort column descending"
      >
        <%= t 'verbs.actions' %>
        <%= link_to new_admins_backoffice_question_path, class: 'btn btn-success btn-circle btn-sm ml-2' do %>
          <i class="fas fa-plus"></i>
        <% end %>
      </th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <th class="text-center" rowspan="1" colspan="1"><%= @question_attribute_description %></th>
      <th class="text-center" rowspan="1" colspan="1">
        <%= t 'verbs.actions' %>
        <%= link_to new_admins_backoffice_question_path, class: 'btn btn-success btn-circle btn-sm ml-2' do %>
          <i class="fas fa-plus"></i>
        <% end %>
      </th>
    </tr>
  </tfoot>
  <tbody>
    <% @questions.each do |question| %>
      <tr class="<%= cycle('odd', 'even') %>">
        <td title="<%= question.subject.description %>">
          <%= question.subject.description.truncate 30 %>
        </td>
        <td title="<%= question.description %>">
          <%= question.description.truncate 50 %>
        </td>
        <td class="w-100 d-flex justify-content-center">
          <%= link_to edit_admins_backoffice_question_path(question), class: 'btn btn-primary btn-circle btn-sm' do %>
            <i class="fas fa-edit"></i>
          <% end %>
          <%= link_to admins_backoffice_question_path(question), method: :delete,
              class: 'btn btn-danger btn-circle btn-sm ml-2', data: { confirm: t('texts.confirmations.delete') } do %>
            <i class="fas fa-trash"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="d-flex justify-content-center mt-3">
  <%= paginate @questions %>
</div>