

<div class="card o-hidden border-0 shadow-lg my-5">
  <div class="card-body p-0">
    <!-- Nested Row within Card Body -->
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <div class="p-5">
          <div class="text-center">
            <h1 class="h4 text-gray-900 mb-4"><%= t 'texts.sign_up_account' %></h1>
          </div>
          <%= form_for(resource,  as: resource_name, url: registration_path(resource_name),
                                  html: { class: 'user' }) do |f| %>
            <%= render "admins/shared/error_messages", resource: resource %>

            <div class="form-group">
              <%= f.email_field :email, autofocus: true, placeholder: t('texts.email_address'),
                                class: 'form-control form-control-user' %>
            </div>

            <div class="form-group">
              <% password_placeholder = t 'activerecord.attributes.admin.password' %>
              <% password_placeholder += " (#{t( 'texts.minimum_characters', 
                                            minimum: @minimum_password_length)})".downcase if @minimum_password_length %>
              
              <%= f.password_field  :password, placeholder: password_placeholder,
                                    class: 'form-control form-control-user' %>
            </div>

            <div class="form-group">
              <%= f.password_field  :password_confirmation, 
                                    placeholder: "#{t('activerecord.attributes.admin.password_confirmation')}",
                                    class: 'form-control form-control-user' %>
            </div>

            <%= f.submit t('texts.sign_up'), class: 'btn btn-primary btn-user btn-block' %>
          <% end %>
          <hr>
          <div class="text-center">
            <%= render "admins/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>